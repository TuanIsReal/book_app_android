<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".fragment.ProfileFragment">

    <TextView
        android:id="@+id/fileProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Hồ sơ"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/nameTv"
        android:maxLines="1"
        android:layout_below="@id/fileProfile"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Tên người dùng"/>

    <ImageButton
        android:id="@+id/reloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reload_gray"
        android:layout_below="@id/fileProfile"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:layout_marginRight="15dp"
        android:padding="10dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/gray01"
        android:layout_below="@id/nameTv"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/icGoldProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/nameTv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/avatar"
        android:src="@drawable/ic_point_gold" />
    <TextView
        android:id="@+id/pointTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/icGoldProfile"
        android:textSize="30dp"
        android:text="0"
        />

    <Button
        android:id="@+id/buyPointBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pointTv"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button5"
        android:text="Mua Point"/>

    <TextView
        android:id="@+id/settingTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cài đặt"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/line0"
        android:gravity="left|center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_right_black"/>

    <TextView
        android:id="@+id/incomeTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thống kê thu chi"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/line1"
        android:gravity="left|center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_right_black"/>

    <TextView
        android:id="@+id/changeTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Biến động số dư"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/line2"
        android:gravity="left|center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_right_black"/>

    <TextView
        android:id="@+id/logoutTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Đăng xuất"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/line3"
        android:gravity="left|center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_right_black"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/incomeTv"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/settingTv"
        />
    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/avatar"
        android:layout_marginTop="80dp"/>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/changeTv"
        />
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/logoutTv"
        />

</RelativeLayout>